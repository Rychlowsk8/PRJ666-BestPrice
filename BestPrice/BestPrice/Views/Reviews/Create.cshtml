<h1>Create Review</h1>

<hr />

<h2 style="margin-left:192px">Give us your opinions about this product</h2>

<div class="row">
    <div class="col-md-2">
        <img src="@ViewBag.picture" alt="Image not available" height="150" width="150" />
    </div>
    <div class="col-md-10">
        <h3>@ViewBag.productName &nbsp; from &nbsp; @ViewBag.sellerName</h3>
    </div>
</div>

<hr />

<div class="col-md-8 well" style="background: white;margin-left:192px">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Subject" class="control-label">Add a subject</label>
            <input asp-for="Subject" class="form-control" placeholder="What's most important to know?">
            <span asp-validation-for="Subject" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label">Write your review</label>
            <textarea asp-for="Description" class="form-control" placeholder="What did you like or dislike about this product or seller?" rows="4" cols="50" style="resize: none"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group text-center">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </form>
</div>

<br />
