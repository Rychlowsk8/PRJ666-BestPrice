@model BestPrice.Models.Reviews;
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create Review</h1>

<hr />

<h2 style="margin-left:192px">Give us your opinions about this product</h2>

<div class="row">
    <div class="col-md-2">
        <img src="@Model.Image" alt="Image not available" height="150" width="150" />
    </div>
    <div class="col-md-10">
        <h3>@Model.ProductName &nbsp; from &nbsp; @Model.SellerName</h3>
    </div>
</div>

<hr />

<div class="col-md-8 well" style="background: white;margin-left:192px">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Subject" class="control-label">Add a subject</label>
            <input asp-for="Subject" class="form-control" placeholder="What's most important to know?">
            <span asp-validation-for="Subject" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label">Write your review</label>
            <textarea asp-for="Description" class="form-control" placeholder="What did you like or dislike about this product or seller?" rows="4" cols="50" style="resize: none"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Rating" class="control-label">Give a rating</label>
            <div class="col-md-12">
                <span class="rating">
                    @for (int i = 1; i <= 5; i++)
                    {
                        var starClass = "star";
                        if (Model.Rating == 6 - i)
                        {
                            starClass += " active";
                        }
                        <span data-value="@(6 - i)" class="@starClass"></span>
                    }
                </span>
            </div>
            <input asp-for="Rating" hidden/>
            <br />
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>
        <input asp-for="ProductName" hidden />
        <input asp-for="SellerName" hidden />
        <input asp-for="Image" hidden />
        <input asp-for="Link" hidden />
        <input asp-for="ProductDescription" hidden />
        <input asp-for="Price" hidden />
        <div class="form-group text-center">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>

    </form>
</div>

<br />

@section Scripts {
    <script src="~/js/rating.js"></script>

}

