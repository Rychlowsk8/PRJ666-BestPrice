@model BestPrice.Models.ApplicationUser

@{
    ViewData["Title"] = "Clear Notifications";
}

<h2>Clear your notification list?</h2>
<h4>Are you sure you want to delete all the notifications?</h4>

<hr />

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="Index">Back to Notification List</a>
</form>


