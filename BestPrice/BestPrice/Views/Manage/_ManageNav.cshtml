@using BestPrice.Views.Manage
@inject SignInManager<ApplicationUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
<ul class="nav nav-pills nav-stacked">
    <li class="@ManageNavPages.IndexNavClass(ViewContext)"><a asp-action="Index">Details</a></li>
    <li class="@ManageNavPages.SettingsNavClass(ViewContext)"><a asp-action="Settings">Settings</a></li>
    <li class="@ManageNavPages.HistoryNavClass(ViewContext)"><a asp-action="History">Search History</a></li>
    @if (hasExternalLogins)
    {
        <li class="@ManageNavPages.ExternalLoginsNavClass(ViewContext)"><a asp-action="ExternalLogins">External logins</a></li>
    }
</ul>