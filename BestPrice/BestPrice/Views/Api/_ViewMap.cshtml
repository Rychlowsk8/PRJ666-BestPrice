@inject UserManager<ApplicationUser> UserManager
@{
    var user = await UserManager.GetUserAsync(User);
    var location = "70 The Pond Rd, North York";
    var location_url = "";

    if (user != null)
    {
        location = user.Location;
        if (location == null)
        {
            location = "70 The Pond Rd, North York";
        }
    } 
    location = Uri.EscapeDataString(location);
    location_url = "https://maps.google.com/maps?q=" + location + "&t=&z=13&ie=UTF8&iwloc=&output=embed";
}

<hr />
<div class="mapouter">
    <div class="gmap_canvas">
        <iframe width="450" height="350" id="gmap_canvas" src=@location_url frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe>
    </div>
    <style>
        .mapouter {
            position: relative;
            text-align: right;
            height: 350px;
            width: 450px;
        }

        .gmap_canvas {
            overflow: hidden;
            background: none !important;
            height: 350px;
            width: 450px;
        }
    </style>
</div>