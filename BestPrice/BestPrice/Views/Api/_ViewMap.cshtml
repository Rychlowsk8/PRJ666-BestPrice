@inject UserManager<ApplicationUser> UserManager
@{
    var user = await UserManager.GetUserAsync(User);
    var location = "70 The Pond Rd, North York";
    var location_url = "";

    if (user != null)
    {
        location = user.Location;
        if (location == null)
        {
            location = "70 The Pond Rd, North York";
        }
    } 
    location = Uri.EscapeDataString(location);
    location_url = "https://maps.google.com/maps?q=" + location + "&t=&z=13&ie=UTF8&iwloc=&output=embed";
    //location_url = "https://maps.google.com/maps/search/best+buy?api=AIzaSyDDMOEbR2wgqUGboxORBHE8zyW9wLXwFME";

}

<hr />
<div class="mapouter">
    <div class="gmap_canvas">
        <iframe id="gmap_canvas" src=@location_url frameborder="0" scrolling="no" 
                marginheight="0" marginwidth="0" style="position: relative; height: 350px; width: 100%;"></iframe>
    </div>
    <style>
        .mapouter {
            position: relative;
            text-align: right;
            height: 75%;
            width: 100%;
        }

        .gmap_canvas {
            overflow: hidden;
            background: none !important;
            height: 75%;
            width: 100%;
        }
    </style>
</div>