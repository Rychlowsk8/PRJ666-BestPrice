@model IEnumerable<BestPrice.Models.Faqs>

@{
    ViewBag.Title = "Help Centre";
    Layout = "_Layout";
}

<head>
    <script src="@Url.Content("~/lib/jquery/dist/jquery.js")"></script>
    
    <script>
        $(document).ready(function() {
            $("#product_search").click(function() {
                $.get('@Url.Action("HelpProductSearch","Home")', {}, function(response) {
                    $("#display").html(response);
                });
            });
            $("#notifications").click(function() {
                $.get('@Url.Action("HelpNotifications","Home")', {}, function(response) {
                    $("#display").html(response);
                });
            });
            $("#wishlist").click(function() {
                $.get('@Url.Action("HelpWishlist","Home")', {}, function(response) {
                    $("#display").html(response);
                });
            });
             $("#review").click(function() {
                $.get('@Url.Action("HelpReview","Home")', {}, function(response) {
                    $("#display").html(response);
                });
            });
            $("#create_account").click(function() {
                $.get('@Url.Action("HelpCreateAccount","Home")', {}, function(response) {
                    $("#display").html(response);
                });
            });
            $("#delete_account").click(function() {
                $.get('@Url.Action("HelpDeleteAccount","Home")', {}, function(response) {
                    $("#display").html(response);
                });
            });
            $("#change_email").click(function() {
                $.get('@Url.Action("HelpChangeEmail","Home")', {}, function(response) {
                    $("#display").html(response);
                });
            });
            $("#save_searches").click(function() {
                $.get('@Url.Action("HelpSaveSearches","Home")', {}, function(response) {
                    $("#display").html(response);
                });
            });
            $("#save_location").click(function() {
                $.get('@Url.Action("HelpSaveLocation","Home")', {}, function(response) {
                    $("#display").html(response);
                });
            });
            $("#change_password").click(function() {
                $.get('@Url.Action("HelpChangePassword","Home")', {}, function(response) {
                    $("#display").html(response);
                });
            });
            $("#account_settings").click(function() {
                $.get('@Url.Action("HelpAccountSettings","Home")', {}, function(response) {
                    $("#display").html(response);
                });
            });
            $("#problem_report").click(function() {
                $.get('@Url.Action("HelpReportProblem","Home")', {}, function(response) {
                    $("#display").html(response);
                });
            });
             $("#contact_us").click(function() {
                $.get('@Url.Action("HelpContactDeveloper","Home")', {}, function(response) {
                    $("#display").html(response);
                });
            });
        }); 
    </script>
</head>
<h1>What can we help you with?</h1>


<div class="row">
    <div class="col-md-4">
        <h2 class="text-info">TechPG Main Features</h2>
        <ul>
            <li id="product_search"><a href="#">Product Search</a></li>
            <li id="notifications"><a href="#">Notifications</a></li>
            <li id="wishlist"><a href="#">Wishlist</a></li>
            <li id="review"><a href="#">Product Review</a></li>
        </ul>
    </div>

    <div class="col-md-4">
        <h2 class="text-info">Manage Your Account</h2>
        <ul>
            <li id="create_account"><a href="#">Create Account</a></li>
            <li id="delete_account"><a href="#">Delete Account</a></li>
            <li id="change_email"><a href="#">Change Email</a></li>
            <li id="change_password"><a href="#">Change Password</a></li>
        </ul>
    </div>

    <div class="col-md-4">
        <h2 class="text-info">Other Features</h2>
        <ul>
            <li id="save_searches"><a href="#">Save Recent Searches</a></li>
            <li id="save_location"><a href="#">Save Location</a></li>
            <li id="account_settings"><a href="#">Account Settings</a></li>
            <li id="problem_report"><a href="#">Report Problem</a></li>
            <li id="contact_us"><a href="#">Contact Developers</a></li>
        </ul>
    </div>
</div>

<hr />

<div id="display"></div>

<hr />

<h2 class="text-warning">Frequently Asked Questions</h2>

<br />

@{ int numberOfFaqs = 0; }
@foreach (var faq in Model)
{
    numberOfFaqs++;
    <h4>@numberOfFaqs. &nbsp &nbsp Q: @Html.DisplayFor(modelItem => faq.Question)</h4>
    <h4>&nbsp &nbsp &nbsp &nbsp A: @Html.DisplayFor(modelItem => faq.Answer)</h4>
    <br />
}
<br/>


