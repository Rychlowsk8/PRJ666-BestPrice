@using Microsoft.AspNetCore.Identity
@using BestPrice.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
<form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
    <ul class="nav navbar-nav navbar-right">
        <li>
            <a style="color:black; font-size:15px; font-family: Georgia, Times, " Times New Roman", serif;" asp-area="" asp-controller="Wishlists" asp-action="Index">
                <span class="glyphicon glyphicon-tags" aria-hidden="true"></span>&nbsp; Wishlist
            </a>
        </li>
        <li>
            <a style="color:black; font-size:15px; font-family: Georgia, Times, " Times New Roman", serif;" asp-area="" asp-controller="Notifications" asp-action="Index">
                <span class="glyphicon glyphicon-inbox" aria-hidden="true"></span>&nbsp; Notifications
            </a>
        </li>
        <li>
            <a style="color:black; font-size:15px; font-family: Georgia, Times, " Times New Roman", serif;" asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">
                <span class="glyphicon glyphicon-user" aria-hidden="true"></span>&nbsp; @UserManager.GetUserName(User)!
            </a>
        </li>
        <li>
            <button style="color:black; font-size:15px; font-family: Georgia, Times, " Times New Roman", serif;" type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
        </li>
    </ul>
</form>
}
else
{
<ul class="nav navbar-nav navbar-right">
    <li><a style="color:black; font-size:15px; font-family: Georgia, Times, " Times New Roman", serif;" asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
    <li><a style="color:black; font-size:15px; font-family: Georgia, Times, " Times New Roman", serif;" asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
</ul>
}
